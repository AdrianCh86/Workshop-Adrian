class Main {
    public static void main( String args[] ) {
        
        // declaram si initializam variabila varsta de tip int
        int varsta = 33;
        
        // in functie de o valoare se executa o singura ramura de cod
        if (varsta < 0) {
            System.out.println("varsta invalida");
        } else if (varsta < 14) {
            System.out.println("minor fara buletin");
        } else if (varsta < 18) {
            System.out.println("minor cu buletin");
        } else {
            System.out.println("major");
        }
    }    
}

